function setmenu() {
    //debugger;
    var w = 0;
    var counter = 0;
    var rest = 0;

    $(".menu_second_layer a:not(.link_off)").each(function() 
    {
        counter++;
        $(this).width("auto");
        w = parseInt($(this).width()) + w;
    });

    rest = parseInt((960 - w) / counter);
    w = 0;
    $(".menu_second_layer a:not(.link_off)").each(function (index) {
        w = parseInt($(this).width()) + rest + w;

        if (index == counter - 1) {
            // know bug in ie6 - fix duplictae values
            if (ie6 = $.browser && $.browser.msie && $.browser.version < 7) {
                $(this).css("margin-right", "-6px");
            }

            $(this).width($(this).width() + rest + (960 - w));
            $(this).css("visibility", "visible");
            $(this).css("float", "left");
        }
        else {
            $(this).width($(this).width() + rest);
            $(this).css("visibility", "visible");
        }
    });
}

